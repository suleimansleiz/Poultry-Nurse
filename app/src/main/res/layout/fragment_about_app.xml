<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="?attr/colorOnPrimary"
    tools:context=".ui.support_fragments.AboutAppFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="UselessParent">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          tools:ignore="ScrollViewSize">

          <LinearLayout
              android:id="@+id/llHeader"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginEnd="10dp"
              android:orientation="vertical"
              android:padding="15dp"
              tools:ignore="UseCompoundDrawables">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:fontFamily="@font/gotham_ultra"
                  android:gravity="center"
                  android:text="@string/about_app_header"
                  android:textColor="?attr/colorSecondary"
                  android:textSize="25sp"
                  tools:ignore="TextContrastCheck" />

              <ImageView
                  android:layout_width="70dp"
                  android:layout_height="70dp"
                  android:layout_gravity="center"
                  android:layout_marginTop="15dp"
                  android:src="@mipmap/ic_launcher_round"
                  android:contentDescription="TODO"
                  tools:ignore="ContentDescription,HardcodedText" />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/llOverview"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/llHeader"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:orientation="vertical"
              android:padding="15dp">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:fontFamily="@font/gotham_book"
                  android:text="@string/overview"
                  android:textAlignment="textStart"
                  android:textColor="?attr/colorOnSecondary"
                  android:textSize="15sp" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:fontFamily="@font/gotham_book"
                  android:text="@string/overview_description"
                  android:textAlignment="textStart"
                  android:textColor="?attr/colorOnSecondary"
                  android:textSize="15sp" />
          </LinearLayout>
          <LinearLayout
              android:id="@+id/llFeatures"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/llOverview"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:orientation="vertical"
              android:padding="15dp">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:fontFamily="@font/gotham_book"
                  android:text="@string/features"
                  android:textAlignment="textStart"
                  android:textColor="?attr/colorOnSecondary"
                  android:textSize="15sp" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="20dp"
                  android:fontFamily="@font/gotham_book"
                  android:text="@string/features_description1"
                  android:textAlignment="textStart"
                  android:textColor="?attr/colorOnSecondary"
                  android:textSize="15sp" />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="20dp"
                  android:fontFamily="@font/gotham_book"
                  android:text="@string/features_description2"
                  android:textAlignment="textStart"
                  android:textColor="?attr/colorOnSecondary"
                  android:textSize="15sp" />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="20dp"
                  android:fontFamily="@font/gotham_book"
                  android:text="@string/features_description3"
                  android:textAlignment="textStart"
                  android:textColor="?attr/colorOnSecondary"
                  android:textSize="15sp" />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="20dp"
                  android:fontFamily="@font/gotham_book"
                  android:text="@string/features_description4"
                  android:textAlignment="textStart"
                  android:textColor="?attr/colorOnSecondary"
                  android:textSize="15sp" />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/llMission"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/llFeatures"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:orientation="vertical"
              android:padding="15dp">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:fontFamily="@font/gotham_book"
                  android:text="@string/Mission"
                  android:textAlignment="textStart"
                  android:textColor="?attr/colorOnSecondary"
                  android:textSize="15sp" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:fontFamily="@font/gotham_book"
                  android:text="@string/Mission_description"
                  android:textAlignment="textStart"
                  android:textColor="?attr/colorOnSecondary"
                  android:textSize="15sp" />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/llVision"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/llMission"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp"
              android:orientation="vertical"
              android:padding="15dp">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:fontFamily="@font/gotham_book"
                  android:text="@string/vision"
                  android:textAlignment="textStart"
                  android:textColor="?attr/colorOnSecondary"
                  android:textSize="15sp" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:fontFamily="@font/gotham_book"
                  android:text="@string/vision_description"
                  android:textAlignment="textStart"
                  android:textColor="?attr/colorOnSecondary"
                  android:textSize="15sp" />
          </LinearLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/llVision"
              android:padding="10dp"
              android:layout_marginTop="30dp"
              android:layout_marginStart="10dp"
              android:layout_marginEnd="10dp">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:fontFamily="@font/gotham_medium"
                  android:textColor="?attr/colorSecondaryVariant"
                  android:textAlignment="center"
                  android:layout_alignParentBottom="true"
                  android:text="@string/developer_hints"/>
          </RelativeLayout>
      </RelativeLayout>
    </ScrollView>

</RelativeLayout>