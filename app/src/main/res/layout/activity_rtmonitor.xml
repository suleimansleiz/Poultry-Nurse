<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorOnPrimary"
    tools:context=".ui.activities.RTMonitorActivity">

    <ImageView
        android:id="@+id/ivRTMonitoring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/tvRTMonitoring"
        android:layout_margin="10dp"
        android:contentDescription="@string/iv_monitoring"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/tvRTMonitoring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/rt_monitoring_tv"
        android:textSize="20sp"
        android:textColor="?attr/colorOnSecondary"
        android:fontFamily="@font/gotham_book"
        android:layout_margin="10dp"
        android:textAlignment="center"/>
</RelativeLayout>