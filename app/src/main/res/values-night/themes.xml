<resources>
    <!-- Base application theme. -->
    <style name="Theme.PDDC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rich_black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/rich_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:colorEdgeEffect">@color/teal_500</item>
        <item name="android:colorAccent">@color/teal_700</item>
        <item name="action">@color/rich_black</item>
        <item name="colorContainer">@color/rich_black</item>
        <item name="colorOnContainer">@color/rich_black</item>
    </style>

</resources>